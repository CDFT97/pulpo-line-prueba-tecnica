{
    "openapi": "3.0.0",
    "info": {
        "title": "Pulpoline Test API",
        "description": "Api creada para obtener los datos climaticos de ciudades",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register",
                "description": "Register new customer/user",
                "operationId": "5d4fa5d5607ed675ba93907e1fc94534",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Abcd1234#"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Abcd1234#"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Iniciar sesión",
                "description": "Autentica al usuario y devuelve un token de acceso.",
                "operationId": "67d6d0fdd54fba132e1b6f55ca254183",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Abcd1234#"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Errores de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": [
                                                    "The email field is required."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Cerrar la sesión del usuario",
                "description": "Elimina los tokens de autenticación del usuario actual, cerrando su sesión.",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/upgrade-to-premium": {
            "get": {
                "tags": [
                    "Subscription"
                ],
                "summary": "Actualizar usuario a premium",
                "description": "Actualiza el rol del usuario autenticado a premium, otorgando acceso a funcionalidades exclusivas",
                "operationId": "35beea78523c57efb406a980b0fc46d3",
                "responses": {
                    "200": {
                        "description": "Actualización exitosa a premium",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ahora tienes acceso a todas las funcionalidades premium"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Permiso denegado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ya tienes una cuenta premium"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error del servidor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ocurrió un error al actualizar tu cuenta"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Detalles del error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/get-weather-by-city": {
            "post": {
                "tags": [
                    "Weather"
                ],
                "summary": "Obtener clima por ciudad",
                "description": "Obtiene el clima de una ciudad determinada y registra la búsqueda",
                "operationId": "1b3bf575e880094fe3d81b1d05da8f50",
                "parameters": [
                    {
                        "name": "lang",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "description": "Código de idioma (opcional)",
                            "type": "string",
                            "example": "es"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "city"
                                ],
                                "properties": {
                                    "city": {
                                        "type": "string",
                                        "example": "Madrid"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/WeatherCityResource"
                                        },
                                        "cached": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "expires_in": {
                                            "type": "string",
                                            "example": "24 minutes"
                                        },
                                        "cache_status": {
                                            "type": "string",
                                            "example": "valid"
                                        },
                                        "is_favorite": {
                                            "type": "boolean",
                                            "example": false
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/toggle-favorite": {
            "post": {
                "tags": [
                    "Weather"
                ],
                "summary": "Alternar ciudad favorita",
                "description": "Añade o elimina una ciudad de favoritos",
                "operationId": "d82b914ab299fceee8a1eb342935486e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "city_id"
                                ],
                                "properties": {
                                    "city_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ciudad agregada a favoritos"
                                        },
                                        "is_favorite": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Ciudad no encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/recent-searches": {
            "get": {
                "tags": [
                    "Weather"
                ],
                "summary": "Obtener búsquedas recientes",
                "description": "Devuelve las últimas ciudades buscadas por el usuario",
                "operationId": "c0891a3659ef8ba14099c35499479c1c",
                "responses": {
                    "200": {
                        "description": "Lista de búsquedas recientes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CityResource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/favorites": {
            "get": {
                "tags": [
                    "Weather"
                ],
                "summary": "Obtener ciudades favoritas",
                "description": "Devuelve las ciudades marcadas como favoritas por el usuario",
                "operationId": "324cc07691f449033be8c949a311c2ff",
                "responses": {
                    "200": {
                        "description": "Lista de ciudades favoritas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CityResource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "CityResource": {
                "properties": {
                    "id": {
                        "description": "ID único de la ciudad",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Nombre de la ciudad",
                        "type": "string",
                        "example": "Madrid"
                    },
                    "region": {
                        "description": "Región o estado de la ciudad",
                        "type": "string",
                        "example": "Madrid"
                    },
                    "country": {
                        "description": "País donde se encuentra la ciudad",
                        "type": "string",
                        "example": "Spain"
                    },
                    "timezone": {
                        "description": "Zona horaria de la ciudad",
                        "type": "string",
                        "example": "Europe/Madrid"
                    },
                    "created_at": {
                        "description": "Fecha de creación del registro",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "updated_at": {
                        "description": "Fecha de última actualización",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-01-01T00:00:00.000000Z"
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "properties": {
                    "id": {
                        "description": "The unique identifier of the product",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Name of User",
                        "type": "string",
                        "example": "Pedro"
                    },
                    "email": {
                        "description": "Email of User",
                        "type": "string",
                        "example": "pedro@gmail.com"
                    },
                    "role": {
                        "description": "Role name of user",
                        "type": "string",
                        "example": "free"
                    }
                },
                "type": "object"
            },
            "WeatherCityResource": {
                "properties": {
                    "city": {
                        "properties": {
                            "name": {
                                "description": "Nombre de la ciudad",
                                "type": "string",
                                "example": "Maturín"
                            },
                            "region": {
                                "description": "Región o estado de la ciudad",
                                "type": "string",
                                "example": "Monagas"
                            },
                            "country": {
                                "description": "País donde se encuentra la ciudad",
                                "type": "string",
                                "example": "Venezuela"
                            },
                            "tz_id": {
                                "description": "Zona horaria de la ciudad",
                                "type": "string",
                                "example": "America/Caracas"
                            }
                        },
                        "type": "object"
                    },
                    "temp_c": {
                        "description": "Temperatura en grados Celsius",
                        "type": "number",
                        "format": "float",
                        "example": 28
                    },
                    "temp_f": {
                        "description": "Temperatura en grados Fahrenheit",
                        "type": "number",
                        "format": "float",
                        "example": 82.4
                    },
                    "weather": {
                        "description": "Descripción del clima actual",
                        "type": "string",
                        "example": "Light rain shower"
                    },
                    "wind_kph": {
                        "description": "Velocidad del viento en kilómetros por hora",
                        "type": "number",
                        "format": "float",
                        "example": 15.1
                    },
                    "wind_mph": {
                        "description": "Velocidad del viento en millas por hora",
                        "type": "number",
                        "format": "float",
                        "example": 9.4
                    },
                    "humidity": {
                        "description": "Porcentaje de humedad",
                        "type": "integer",
                        "example": 100
                    },
                    "local_time": {
                        "description": "Hora local en formato epoch/unix timestamp",
                        "type": "integer",
                        "example": 1749319106
                    },
                    "parsed_localtime": {
                        "description": "Hora local formateada (DD/MM/YYYY HH:MM:SS)",
                        "type": "string",
                        "example": "07/06/2025 13:58:26"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "UnauthorizedError": {
                "description": "No autorizado (token inválido o ausente)",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Acceso no autorizado. Por favor, proporcione un token de autenticación válido."
                                },
                                "status": {
                                    "type": "string",
                                    "example": "error"
                                },
                                "code": {
                                    "type": "integer",
                                    "example": 40101
                                },
                                "timestamp": {
                                    "type": "string",
                                    "format": "date-time",
                                    "example": "2024-06-06T12:30:00.000000Z"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "Sanctum",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Subscription",
            "description": "Subscription"
        },
        {
            "name": "Weather",
            "description": "Weather"
        }
    ]
}